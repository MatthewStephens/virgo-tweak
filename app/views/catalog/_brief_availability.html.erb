<% unless document.online_only? && !document.get(:url_display).nil? -%>
  <% if params[:portal] != 'video' -%>
    <dt>Availability</dt>
		<% if availability_on_index?(document) -%>
			<dd id="availability_<%= document[:id] %>" class="availability">
			<span class="single-copy"><img src="/images/loading-balls.gif" alt="loading..."></span>
			</dd>
		<% else -%>
			<dd id="availability_<%= document[:id] %>" class="availability">
      	<%= link_to 'View Locations and Availability ', catalog_path(document[:id]) %>
			</dd>
		<% end -%>
		<% unless call_number(document).blank? -%>
			<dt>Call Number</dt>
			<dd class="callNumberField">
				<%= call_number(document, '<br />') -%>
			</dd>
		<% end -%>
	<% else -%>
	  <span id="availability_<%= document[:id] %>" class="availability">
	    <%= availability_on_index?(document) ? '<span class="single-copy"><img src="/images/loading-balls.gif" alt="loading..."></span>' : link_to( 'View Locations &amp; Availability'.html_safe, catalog_path(document[:id]) ) %>
	  </span>
	<% end -%>
<% end -%>



