<div class="previewThumbImg">
  <% if document.doc_type == :dl_book or document.doc_sub_type == :dl_book %>
	  <span class="jp2kPreview">
	    <%= link_to(image_tag(document.dl_jp2k_child_preview(get_exemplar(document.fedora_url, document[:id])), :class => :photo, :alt => document[:id]),
	        document.dl_jp2k_applet_viewer(document[:id]) ) %>
	  </span>
	<% else %>
		<span class="coverImage" title="<%= document.id %>">
			<%= image_tag 'ajax-loader.gif', :class=>'ajaxLoader', :alt => 'Loading' %>
		</span>
	<% end %>
</div>
