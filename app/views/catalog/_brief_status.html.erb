<% unless document.online_only? && !document.get(:url_display).nil? %>      
    <dt>Availability</dt>
		<% if document.values_for(:barcode_facet).length > 1 %>
			<dd id="availability_<%= document[:id] %>" class="availability">
      	<%= image_tag javascript_path('ext-2.2/resources/images/default/shared/loading-balls.gif'), :class=>'ajaxLoader hide' %>
      	<%= link_to 'View Locations and Availability ', catalog_path(document[:id]) %>
			</dd>
		<% else %>
			<dd id="availability_<%= document[:id] %>" class="availability">
			<span class="single-copy">&nbsp;</span>
			</dd>
			<% unless call_number(document).blank? %>
			<dt>Call Number</dt>
			<dd class="callNumberField">
				<%= call_number(document, '<br />') %>
			</dd>
			<% end %>
		<% end %>
<% end %>



