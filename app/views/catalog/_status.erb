<% # make sure document.availability was returned from the availability service -%>
<% if document.availability -%>
<% document.availability.summary_libraries.each do |library| -%>
<%= library.name %>
<% library.summary_locations.each do |location| -%>
<%= location.name %>
<% location.summaries.each do |summary| -%>
<%= summary.text %>, <%= summary.note %>
<% end -%>
<% end -%>
<% end -%>
<% if document.availability.holdings.size == 0 -%>
No information available for this item.
<% else -%>
<% document.availability.holdings.each do |holding| -%>
<% holding.copies.each do |copy| -%>

Library: <%= holding.library.name %>
<% if !holding.library.is_sas? -%>
Location: <%= location_text(holding, copy) %>
Availability: <%= availability_text(copy) %>
Call Number: <%= holding.call_number %>
<% else %>	
Location: <%= location_text(holding, copy) %>
Call Number: <%= sas_call_number_text(holding, copy) %>
<% end -%>

<% end -%>
<% end -%>
<% end -%>

<% end -%>
