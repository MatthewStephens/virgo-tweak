<div class="document clearFix" id="Doc<%= document[:id] %>">
  <div class="details">
    <dl class="metadata hd">
			<dt class="hide">Title: </dt>
		<%- if (document[:linked_title_display] rescue false) -%>
    	<dd class="titleField">
				<span class="listItemNumber"><%= counter + 1 + offset %>.</span>
				<%= link_to_document document, :label => document.value_for(:linked_title_display), :counter => (counter + 1 + offset), :bookmarks_view => bookmarks_view %></dd>
    <%- end -%>
	  	  
      <dd class="titleField">
				<%- unless (document[:linked_title_display] rescue false) -%>
					<span class="listItemNumber"><%= counter + 1 + offset %>.</span>
				<%- end -%>
	<%= link_to_document document, :label => full_title(document), :counter => (counter + 1 + offset), :bookmarks_view => bookmarks_view  %></dd>
     </dl>	

		  <div class="previewThumbImg">		  
 		  <%= link_to_document_from_cover document, :span => "coverImage book", :counter => (counter + 1 + offset), :bookmakrs_view => bookmarks_view  %>
 		</div>

		<dl class="metadata">
  		
		  <% authors = document.author_type_fields %>
			<% authors.each do |k,v| %>
			<dt>Author</dt>
			<dd class="authorField">
				<%= document.value_for k %>
			</dd>
			<% end %>

			<dt>Format</dt>
			<dd class="formatField">
		 	<%= document.value_for :format_facet %> 			
			</dd>
		
		  <% unless journal?(document) %>
			<dt>Publication Date</dt>
			<dd class="formatField">
				<%= document.value_for :published_date_display %>
			</dd>
			<% end %>
			
			<% unless location_listing(document).blank? %>			
			<dt>Location</dt>
			<dd class="locationField">
			  <%= location_listing(document)%>
			</dd>	
			<% end %>
			
			<% unless call_number(document).blank? %>
			<dt>Call Number</dt>
			<dd class="callNumberField">
				<%= call_number(document, '<br />') %>
			</dd>
			<% end %>
		
			<% if !document.get(:url_display).nil? %>
  		  <dt>Online Versions</dt>
  		  <dd class="onlineAccessField"><%= link_to_online_access(document) %></dd>
  		<% end %>


			<% unless document.online_only? && !document.get(:url_display).nil? %>						
			  <dt>Availability</dt>
        <dd class="availability">
               <%= image_tag javascript_path('ext-2.2/resources/images/default/shared/loading-balls.gif'), :class=>'ajaxLoader hide' %>
               <%= link_to 'check availability', catalog_path(document[:id]) %>
        </dd>
      <% end %>
		</dl>
		
	</div>
	
	<% unless bookmarks_view or params[:catalog_select] == 'all' %>
  <div class="tools">
    <%= render :partial=>'catalog/folder_control', :locals=>{:document=>document} %>
  </div>
  <% end %>

</div>

	
